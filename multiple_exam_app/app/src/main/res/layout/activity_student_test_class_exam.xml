<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/normalPadding"
    tools:context=".Teacher.ExamClassManagement.classExam.examclass.StudentTestClassExamActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_test_class_exam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText20"/>

    <EditText
        android:id="@+id/editText20"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext_gray"
        android:drawableRight="@drawable/ic_search_24"
        android:ems="10"
        android:hint="Tìm kiếm"
        android:inputType="textPersonName"
        android:padding="@dimen/normalPadding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_add_test_class_exam"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_green"
        android:textColor="@color/white"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>