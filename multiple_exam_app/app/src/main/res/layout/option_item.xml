<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView_dialogImport_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lựa chọn"
        android:layout_margin="@dimen/all_margin_12"
        android:textSize="@dimen/all_text_size_24"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/upload_excel_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/all_margin_64"
        android:layout_marginTop="@dimen/all_margin_32"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/import_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dialogImport_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_12"
        android:text="Import File"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/upload_excel_img"
        app:layout_constraintStart_toStartOf="@+id/upload_excel_img"
        app:layout_constraintTop_toBottomOf="@+id/upload_excel_img" />

    <ImageView
        android:id="@+id/download_excel_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="@dimen/all_margin_64"
        android:src="@drawable/baseline_file_download_24"
        app:layout_constraintBottom_toBottomOf="@+id/upload_excel_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/upload_excel_img"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu về máy "
        android:layout_marginTop="@dimen/all_margin_12"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/download_excel_img"
        app:layout_constraintStart_toStartOf="@+id/download_excel_img"
        app:layout_constraintTop_toBottomOf="@+id/download_excel_img" />

    <Button
        android:id="@+id/cancel_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hủy"
        android:layout_marginEnd="@dimen/all_margin_12"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

</androidx.constraintlayout.widget.ConstraintLayout>