<!-- res/layout/answer_field_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkboxAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/innerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/answerImageView"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:visibility="gone"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="300dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:hint="Nhập đáp án" />

        <ImageView
            android:id="@+id/voiceInputButtonAnswer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_mic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/innerLayout2"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chooseImageButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background_green"
            android:drawablePadding="@dimen/all_padding_6"
            android:drawableTint="@color/white"
            android:paddingHorizontal="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Chọn ảnh" />

        <Button
            android:id="@+id/deleteAnswerButton"
            android:layout_width="100dp"
            android:layout_marginLeft="90dp"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:layout_gravity="center"
            android:background="@drawable/button_background_green"
            android:drawablePadding="@dimen/all_padding_12"
            android:drawableTint="@color/white"
            android:paddingHorizontal="30dp"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>
