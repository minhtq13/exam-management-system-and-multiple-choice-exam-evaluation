<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.ProfileUser.teacher.ProfileTeacherFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_bachkhoa_landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_margin_6"
        android:alpha="0.9"
        android:background="@drawable/rounded_background_white"
        android:elevation="@dimen/all_elevation_6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgUser_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/all_margin_6"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_avatar_70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_profile_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/all_margin_12"
            tools:text="Nguyễn Văn A"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgUser_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <TextView
            android:id="@+id/teacher_role_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            tools:text="Sinh viên"
            android:textAlignment="center"
            android:textColor="@color/followers"
            android:textSize="@dimen/all_text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name_profile_teacher"
            app:layout_constraintStart_toEndOf="@+id/tv_name_profile_teacher"
            app:layout_constraintTop_toTopOf="@+id/tv_name_profile_teacher" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Số hiệu:"
            android:textSize="@dimen/all_text_size_13"
            app:layout_constraintStart_toEndOf="@+id/imgUser_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_profile_teacher" />

        <TextView
            android:id="@+id/teacher_mssv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            tools:text="20192882"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/all_margin_12"
        android:background="@drawable/rounded_background_white"
        android:elevation="@dimen/all_elevation_6"
        android:orientation="vertical"
        android:padding="@dimen/all_padding_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Email"
            android:textColor="@color/headings"
            android:textSize="@dimen/all_text_size_13" />

        <TextView
            android:id="@+id/teacher_email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="doquanghung@gmail.com"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_18" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Số điện thoại"

            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/teacher_number_phone_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="02-555-0157"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="24dp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Ngày sinh"
            android:textColor="@color/headings"
            android:textSize="@dimen/all_text_size_13" />

        <TextView
            android:id="@+id/teacher_birthday_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2001-08-09"
            android:textColor="#000000"
            android:textSize="18sp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Giới tính"
            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/teacher_gender_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nam"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_18" />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_teacher_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_margin="@dimen/all_margin_24"
        android:elevation="@dimen/all_elevation_6"
        app:backgroundTint="@color/followersBg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>