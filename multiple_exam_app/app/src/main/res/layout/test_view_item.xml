<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_background_white"
    android:elevation="5dp"
    android:orientation="horizontal"
    android:padding="@dimen/all_padding_12">

    <TextView
        android:id="@+id/textVIew1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đề số: "
        android:textColor="#090909"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_ma_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="code"
        android:layout_weight="@integer/material_motion_duration_long_1"
        android:textColor="#090909"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textVIew1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/test_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:layout_marginStart="@dimen/all_padding_12"
        android:textColor="@color/red_light"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/test_ma_de"
        tools:layout_editor_absoluteY="13dp" />

    <ImageView
        android:layout_marginHorizontal="@dimen/all_padding_12"
        android:id="@+id/img_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_red_eye_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/test_download"
        app:layout_constraintTop_toTopOf="parent"
     />

</LinearLayout>