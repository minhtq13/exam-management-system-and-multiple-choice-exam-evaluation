<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Teacher.ExamsOffline.teacher.TeacherProfileActivity">

    <RelativeLayout
        android:id="@+id/topBarMenu_detailTeacher"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/img_bachkhoa_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông tin giảng viên"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_bachkhoa_landscape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarMenu_detailTeacher" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/all_margin_6"
        android:alpha="0.9"
        android:background="@drawable/rounded_background_white"
        android:elevation="@dimen/all_elevation_6"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarMenu_detailTeacher">

        <ImageView
            android:id="@+id/imgUser_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/all_margin_6"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_avatar_70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_detailTeacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/all_margin_12"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_24"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgUser_profile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            tools:text="Nguyễn Văn A" />

        <TextView
            android:id="@+id/teacher_role_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Giảng viên"
            android:textAlignment="center"
            android:textColor="@color/followers"
            android:textSize="@dimen/all_text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/textview_detailTeacher_name"
            app:layout_constraintStart_toEndOf="@+id/textview_detailTeacher_name"
            app:layout_constraintTop_toTopOf="@+id/textview_detailTeacher_name" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="Giảng dạy học phần:"
            android:textSize="@dimen/all_text_size_13"
            app:layout_constraintStart_toEndOf="@+id/imgUser_profile"
            app:layout_constraintTop_toBottomOf="@+id/textview_detailTeacher_name" />

        <TextView
            android:id="@+id/textview_detailTeacher_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_16"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            tools:text="ET1111" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/all_margin_12"
        android:background="@drawable/rounded_background_white"
        android:elevation="@dimen/all_elevation_6"
        android:orientation="vertical"
        android:padding="@dimen/all_padding_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Email"
            android:textColor="@color/headings"
            android:textSize="@dimen/all_text_size_13" />

        <TextView
            android:id="@+id/textview_detailTeacher_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_18"
            android:textStyle="bold"
            tools:text="doquanghung@gmail.com" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Số điện thoại"
            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_detailTeacher_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="24dp"
            tools:text="02-555-0157" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Ngày sinh"
            android:textColor="@color/headings"
            android:textSize="@dimen/all_text_size_13" />

        <TextView
            android:id="@+id/textview_detailTeacher_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="2001-08-09" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/all_margin_12"
            android:text="Giới tính"
            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textview_detailTeacher_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/all_text_size_18"
            tools:text="Nam" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>