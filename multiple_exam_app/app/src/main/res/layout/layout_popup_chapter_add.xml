<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Thêm mới"
        android:textAlignment="center"
        android:textFontWeight="500"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Tên mục"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_chapter_24"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/editTextTitleChapterAdd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext_gray"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Chương số"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_id_chapter_24"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/editTextOrderChapterAdd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext_gray"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Mô tả"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@drawable/ic_description_24"
        app:startIconTint="@color/black">

        <EditText
            android:id="@+id/editTextDescriptionChapter"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edittext_gray"
            android:minHeight="48dp"
            android:padding="8dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background_green"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        android:paddingRight="50dp"
        android:paddingBottom="20dp"
        android:text="Lưu"
        android:textColor="@color/white" />

</LinearLayout>
