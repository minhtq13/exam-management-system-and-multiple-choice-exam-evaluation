<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="5dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_scoring"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_handle"
            android:layout_marginTop="5dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:id="@+id/textview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Số hiệu"
                android:textColor="#090909"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/scoring_mssv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20192882"
                android:textSize="17sp"
                android:textColor="#090909"
                android:gravity="center"/>
            <!-- Add more header columns as needed -->
        </TableRow>

        <!-- Data Rows -->
        <TableRow>
            <TextView
                android:id="@+id/textview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mã lớp thi"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_exam_class_test_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="124575"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mã đề thi"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_test_set"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="546"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textview10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ảnh gốc"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/image_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chi tiết"
                android:textColor="@color/gradStart"
                android:textStyle="italic"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textview5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Số câu khoanh"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_mark_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="56"
                android:textSize="17sp"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/60"
                android:textSize="17sp"
                android:gravity="left"/>
            <!-- Add more data columns as needed -->
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textview6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Số câu đúng"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_correct_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textview4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Số câu sai"
                android:textColor="#090909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_handle_scoring_wrong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textview7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Điểm"
                android:textColor="#E80909"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/scoring_total_point"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/red_light"
                android:text="10.0"
                android:textSize="17sp"
                android:gravity="center"/>
            <!-- Add more data columns as needed -->
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/questionNumber"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Câu "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/selectedAnswer"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="Khoanh "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/correctAnswer"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Đúng "
                android:textSize="16sp" />
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"/>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
