<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_white"
    android:elevation="5dp"
    android:gravity="center"
    android:layout_marginVertical="@dimen/all_margin_6"
    android:padding="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp">

    <TextView
        android:id="@+id/chapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="id"
        android:layout_marginStart="@dimen/all_margin_12"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/all_margin_12"
        android:textColor="#7A7C52"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/frame1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginEnd="@dimen/all_margin_6"
            android:textColor="#151515"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/chapter_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Order"
            android:textColor="#404B63"
            android:textSize="17sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/chapter_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/all_margin_12"
        android:backgroundTint="@android:color/holo_green_light"
        app:tint="@color/white"
        app:srcCompat="@drawable/ic_edit"/>
    <ImageButton
        android:id="@+id/chapter_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/headings"
        android:layout_marginEnd="@dimen/all_margin_12"
        app:srcCompat="@drawable/ic_delete_forever_24"
        app:tint="@color/white" />
</LinearLayout>